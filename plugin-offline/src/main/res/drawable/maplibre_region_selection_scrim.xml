<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="30dp"
                android:color="@color/maplibre_offline_dim_scrim" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/maplibre_offline_scrim_padding"
        android:left="@dimen/maplibre_offline_scrim_padding"
        android:right="@dimen/maplibre_offline_scrim_padding"
        android:top="@dimen/maplibre_offline_scrim_padding">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="3dp"
                android:color="@color/maplibre_offline_bright_blue" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</layer-list>